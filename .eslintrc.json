{
    "extends": ["eslint:recommended"],
    "plugins": [],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "blockBindings": true,
            "modules": true,
            "superInFunctions": true,
            "classes": true
        }
    },
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "base_dir": true,
        "abs_path": true,
        "include": true
    },
    "rules": {
        "no-console": "off",
        "semi": ["error", "never"]
    }
}