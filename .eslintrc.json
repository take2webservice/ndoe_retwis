{
    "extends": ["eslint:recommended"],
    "plugins": [],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "blockBindings": true,
            "modules": true,
            "superInFunctions": true,
            "classes": true
        }
    },
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "baseDir": true,
        "absPath": true,
        "include": true
    },
    "rules": {
        "no-console": "off",
        "semi": ["error", "never"],
        "camelcase": [2, {"properties": "always"}]
    }
}